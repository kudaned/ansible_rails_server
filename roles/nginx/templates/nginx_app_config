upstream puma {
  server unix://{{ deploy_dir  }}{{ deploy_app_name }}/shared/tmp/sockets/{{ deploy_app_name }}-.sock fail_timeout=0;
}

server {
  listen 80 default_server deferred;
  # server_name example.com;

  root {{ deploy_dir  }}{{ deploy_app_name }}/current/public;
  access_log {{ deploy_dir  }}{{ deploy_app_name }}/current/log/nginx.access.log;
  error_log {{ deploy_dir  }}{{ deploy_app_name }}/current/log/nginx.error.log info;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @puma;
  location @puma {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://puma;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 10M;
  keepalive_timeout 10;
}

